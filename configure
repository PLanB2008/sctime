#!/bin/ksh

if [[ -z $1 ]] ; then
   echo "Syntax: ./configure <architecture>"
   echo "architecture may be one of the follwing values:"
   \ls -1 ./mkspecs/$1
   exit 1 ;
fi
if [[ ! -d ./mkspecs/$1 ]] ; then
   echo "Unknown architecture \"$1\""
   exit 2 ;
fi
echo "Running qmake"
qmake -makefile -spec `pwd`/mkspecs/$1 sctime.pro || echo "qmake failed!"
